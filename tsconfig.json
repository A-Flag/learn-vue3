{
  "compilerOptions": {
    "outDir": "dist",//输出目录
    "sourceMap": true,//采用sourceMap
    "target": "es2016",//目标语法
    "module": "esnext",//模块格式
    "moduleResolution": "node",//模块解析方式
    "strict": false,//设置严格模式
    "resolveJsonModule": true,//解析json模块
    "esModuleInterop": true,//允许通过es6语言引入common.js模块
    "jsx": "preserve",//jsx不转义
    "lib": ["ESNext","DOM"],//支持的类库：exnext及dom
    "baseUrl": ".",
    "paths": {//为了reactivity关联shared
      "@vue/*":[
        "packages/*/src"
      ]
    }
  }
}